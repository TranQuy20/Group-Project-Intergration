@model CEO_Memo.Models.ViewModels.SalaryReportViewModel

@{
    ViewBag.Title = "Báo cáo lương tháng " + Model.Month;
}

<!-- Tiêu đề báo cáo -->
<h2 class="text-center mb-4 text-primary font-weight-bold" style="font-size: 2rem;">Báo cáo bảng lương – @Model.Month</h2>

<!-- Danh sách thông tin tổng quan -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="list-group">
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Số bảng lương</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalPayrolls</strong>
                </li>
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng phụ cấp</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalAllowance.ToString("N0")</strong>
                </li>
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng khấu trừ</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalDeduction.ToString("N0")</strong>
                </li>
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng lương thực lĩnh</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalNetSalary.ToString("N0")</strong>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Chi tiết bảng lương -->
<h3 class="text-center text-primary mt-5 mb-4">Chi tiết bảng lương</h3>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Mã NV</th>
                <th>Lương cơ bản</th>
                <th>Phụ cấp</th>
                <th>Khấu trừ</th>
                <th>Lương thực lĩnh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PayrollDetails)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@String.Format("{0:N0}", item.BaseSalary)</td>
                    <td>@String.Format("{0:N0}", item.Bonus)</td>
                    <td>@String.Format("{0:N0}", item.Deductions)</td>
                    <td><strong>@String.Format("{0:N0}", item.NetSalary)</strong></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Custom CSS -->
<style>
    /* Tiêu đề chính */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Tiêu đề chi tiết bảng lương */
    h3 {
        font-size: 1.5rem;
        color: #007bff;
        font-weight: bold;
    }

    /* Cải thiện giao diện danh sách thông tin */
    .list-group-item {
        padding: 15px;
        font-size: 1rem;
        margin-bottom: 10px;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out;
    }

        .list-group-item:hover {
            background-color: #f1f1f1;
        }

    .list-group-item-info {
        background-color: #e9f7fd;
        border: 1px solid #007bff;
    }

        .list-group-item-info:hover {
            background-color: #cce4f7;
        }

    .badge-pill {
        font-size: 1.2rem;
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
    }

    /* Bảng */
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    /* Màu sắc tiêu đề bảng */
    th {
        background-color: #343a40;
        color: white;
        font-size: 1.1rem;
        font-weight: bold;
        padding: 15px 10px;
        text-align: center;
    }

    /* Các hàng trong bảng */
    td {
        padding: 12px 10px;
        font-size: 1rem;
        text-align: center;
    }

    /* Màu sắc cho các dòng trong bảng */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    /* Hover effect cho bảng */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    /* Responsive bảng */
    .table-responsive {
        margin-top: 30px;
    }

    /* Tạo không gian cho các phần tử */
    .container {
        margin-top: 30px;
    }

    .row {
        margin-bottom: 30px;
    }
</style>
