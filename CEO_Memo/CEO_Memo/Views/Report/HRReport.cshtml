@model CEO_Memo.Models.ViewModels.HRReportViewModel

@{
    ViewBag.Title = "Báo cáo tổng quan nhân sự";
}

<!-- Tiêu đề báo cáo -->
<h2 class="text-center mb-4 text-primary font-weight-bold" style="font-size: 2rem;">Báo cáo tổng quan nhân sự</h2>

<!-- Danh sách thông tin tổng quan -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="list-group">
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng số nhân viên</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalEmployees</strong>
                </li>
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng số phòng ban</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalDepartments</strong>
                </li>
                <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
                    <span>Tổng số chức vụ</span>
                    <strong class="badge badge-primary badge-pill">@Model.TotalPositions</strong>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Cải thiện tiêu đề */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Danh sách thông tin */
    .list-group-item {
        padding: 15px;
        font-size: 1rem;
        margin-bottom: 10px;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out;
    }

        .list-group-item:hover {
            background-color: #f1f1f1; /* Hiệu ứng hover làm sáng màu nền */
        }

    .list-group-item-info {
        background-color: #e9f7fd;
        border: 1px solid #007bff;
    }

        .list-group-item-info:hover {
            background-color: #cce4f7; /* Sáng màu khi hover */
        }

    /* Badge cho giá trị tổng số */
    .badge-pill {
        font-size: 1.2rem;
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        padding: 10px 20px;
    }

    /* Cải thiện bố cục */
    .container {
        margin-top: 30px;
    }

    /* Các phần tử trong bảng dọc */
    .d-flex {
        display: flex;
        justify-content: space-between;
    }

    /* Tạo không gian */
    .row {
        margin-bottom: 30px;
    }
</style>
