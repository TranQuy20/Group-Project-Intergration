@model CEO_Memo.Models.Employee

@{
    ViewBag.Title = "Xóa nhân viên";
}

<h2>Xóa nhân viên</h2>

<h3>Bạn có chắc chắn muốn xóa nhân viên sau không?</h3>
<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Giới tính</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Phòng ban</dt>
        <dd class="col-sm-10">@Model.DepartmentID</dd>

        <dt class="col-sm-2">Chức vụ</dt>
        <dd class="col-sm-10">@Model.PositionID</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Employee", new { id = Model.EmployeeID }, FormMethod.Post))

    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
