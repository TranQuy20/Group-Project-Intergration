@model CEO_Memo.Models.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Đặt lại Mật Khẩu";
}

<div class="reset-password-container">
    <div class="reset-password-box">
        <h2>Đặt lại Mật Khẩu</h2>

        <form method="post">
            <div class="input-container">
                <input type="password" id="NewPassword" name="NewPassword" placeholder="Mật khẩu mới" class="input-field" required />
            </div>
            <div class="input-container">
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu" class="input-field" required />
            </div>

            <button type="submit" class="submit-btn">Đặt lại Mật Khẩu</button>

            <div class="back-link">
                <a href="@Url.Action("Login", "Auth")" class="back-btn">Trở về trang đăng nhập</a>
            </div>
        </form>
    </div>
</div>
<style>
    /* Toàn bộ trang nền */
    body {
        background: linear-gradient(45deg, #6a11cb, #2575fc);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
    }

    /* Phần chứa form đặt lại mật khẩu */
    .reset-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    /* Hộp chứa form */
    .reset-password-box {
        background: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

        /* Tiêu đề */
        .reset-password-box h2 {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 30px;
        }

    /* Trường nhập liệu */
    .input-container {
        margin-bottom: 20px;
    }

    .input-field {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 25px;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
        outline: none;
    }

        .input-field:focus {
            border-color: #2575fc;
            background-color: #fff;
            box-shadow: 0 0 8px rgba(37, 117, 252, 0.3);
        }

    /* Nút đặt lại mật khẩu */
    .submit-btn {
        width: 100%;
        padding: 14px;
        font-size: 16px;
        border: none;
        border-radius: 25px;
        background: #2575fc;
        color: #fff;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .submit-btn:hover {
            background: #6a11cb;
        }

    /* Nút "Trở về trang đăng nhập" */
    .back-link {
        margin-top: 20px;
    }

    .back-btn {
        color: #2575fc;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s ease;
    }

        .back-btn:hover {
            color: #6a11cb;
        }

    /* Thông báo lỗi (nếu có) */
    .alert {
        margin-top: 10px;
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
    }

</style>