@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var emp = ViewBag.Employee as CEO_Memo.Models.Employee;
    var salaryList = ViewBag.SalaryHistory as List<CEO_Memo.Models.Salary>;
}

<h2>👤 Thông tin cá nhân</h2>

@if (emp != null)
{
    <table class="table table-bordered">
        <tr><th>Họ tên</th><td>@emp.FullName</td></tr>
        <tr><th>Phòng ban</th><td>@emp.Department?.DepartmentName</td></tr>
        <tr><th>Chức vụ</th><td>@emp.Position?.PositionName</td></tr>
        <tr><th>Email</th><td>@emp.Email</td></tr>
    </table>
}
else
{
    <div class="alert alert-danger">❌ Không tìm thấy thông tin nhân viên.</div>
}

<h3>💵 Lịch sử lương</h3>

@if (salaryList != null && salaryList.Any())
{
    <table class="table table-striped">
        <thead>
            <tr><th>Tháng</th><th>Lương thực nhận</th></tr>
        </thead>
        <tbody>
            @foreach (var s in salaryList)
            {
                <tr>
                    <td>@s.SalaryMonth.ToString("MM/yyyy")</td>
                    <td>@s.NetSalary.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">⚠️ Chưa có dữ liệu lương nào.</div>
}
