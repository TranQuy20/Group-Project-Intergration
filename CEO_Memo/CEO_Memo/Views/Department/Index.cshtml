@model IEnumerable<CEO_Memo.Models.Department>

@{
    ViewBag.Title = "Danh sách phòng ban";
}

<!-- Tiêu đề -->
<h2 class="text-center mb-4 text-primary">Danh sách phòng ban</h2>

<!-- Bảng danh sách phòng ban -->
<div class="table-responsive mt-4">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Mã phòng</th>
                <th>Tên phòng ban</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmentID</td>
                    <td>@item.DepartmentName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Custom CSS -->
<style>
    /* Tiêu đề */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Tạo độ rộng cho bảng */
    .table {
        width: 100%;
        margin-top: 20px;
    }

        /* Thiết kế bảng */
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            padding: 12px;
            font-size: 1rem;
        }

        .table th {
            background-color: #343a40;
            color: white;
            font-size: 1.1rem;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    /* Cải thiện kiểu hiển thị các tiêu đề */
    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
    }
</style>
